{
  "compilerOptions": {
    "strict": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "downlevelIteration": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "declaration": true,
    "module": "esnext",
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
